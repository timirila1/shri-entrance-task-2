include ./../../components/section-title/section-title.pug
include ./../../components/panel/panel.pug
include ./../../components/filter/filter.pug

mixin devices
    -
        let dPanels = [
            { title: 'Выключить весь свет в доме и во дворе' }, 
            { title: 'Я ухожу' },
            { title: 'Включить свет в коридоре' },
            { title: 'Набрать горячую ванну', text: 'Начнётся в 18:00' },
            { title: 'Включить свет в коридоре' },
            { title: 'Включить свет в коридоре' },
            { title: 'Сделать пол тёплым во всей квартире' }
        ];
        let filterItems = [ 'Все', 'Кухня', 'Зал', 'Лампочки', 'Камеры']
    .devices
        .devices-title
            +section-title("Избранные устройства")
            +filter(filterItems)
        .devices-block
            .devices-list
                each dPanel in dPanels
                    +panel(dPanel, big)